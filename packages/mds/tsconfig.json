{
  "extends": "@repo/typescript-config/base.json",
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  }
}
